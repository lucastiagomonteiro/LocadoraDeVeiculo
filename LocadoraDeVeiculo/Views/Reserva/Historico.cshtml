@model IEnumerable<LocadoraDeVeiculo.Dto.ReservaModelDTO> 

<style>
    .historico-container {
        max-width: 800px;
        margin:0 auto;
        padding: 20px;
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .historico-container h2 {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }

    .reserva-card {
        background-color: #e9f0f5;
        border-left: 6px solid #007BFF;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        transition: transform 0.2s ease;
    }

    .reserva-card:hover {
        transform: scale(1.02);
    }

    .reserva-card h3 {
        margin-top: 0;
        color: #007BFF;
    }

    .reserva-card p {
        margin: 5px 0;
        color: #444;
    }
</style>
<div class="historico-container">
    <h2>Histórico de Reservas</h2>
        @foreach (var item in Model)
        {
            string borderColor = item.StatusReserva switch
            {
                "Alugado" => "red",
                "Reservado" => "chocolate",
                "Finalizada" => "green",
                _ => "#007BFF"
            };

            <div class="reserva-card p-3 mb-3 rounded" style="border-left: 6px solid @borderColor;">
                <h3>@item.NomeVeiculo</h3>

                @if (User.IsInRole("Admin"))
                {
                    <p><strong>Usuário:</strong> @item.UserNameUsuario</p>
                }

                <p><strong>Data de Início:</strong> @item.DataInicio.ToString("dd/MM/yyyy")</p>
                <p><strong>Data de Fim:</strong> @item.DataFim.ToString("dd/MM/yyyy")</p>
                <p><strong>Dias Reservados:</strong> @item.DiasReservados</p>
                <p><strong>Valor Total:</strong> R$ @item.ValorTotal.ToString("f2")</p>

                <p>
                    <strong>Status:
                    @if (item.StatusReserva == "Alugado")
                    {
                        <span class="text-danger">@item.StatusReserva</span>
                    }
                    else if (item.StatusReserva == "Reservado")
                    {
                        <span style="color:chocolate;">@item.StatusReserva</span>
                    }
                    else if (item.StatusReserva == "Finalizada")
                    {
                        <span class="text-success">@item.StatusReserva</span>
                    }
                    </strong>
                </p>
            </div>
        }
    
</div>

